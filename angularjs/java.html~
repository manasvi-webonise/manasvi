<script>
function weather()
{
var wd=new XMLHttpRequest();
wd.open("GET", "http://api.openweathermap.org/data/2.5/weather?q=Pune,India&appid=a3806c731e652ae5f1d01bea99e67fa0", false);
wd.send(null);
 var k= JSON.parse(wd.response);
document.getElementById("long").innerHTML=k.coord.lon;
document.getElementById("lati").innerHTML=k.coord.lat;
document.getElementById("id").innerHTML=k.weather[0].id;
document.getElementById("main").innerHTML=k.weather[0].main;
document.getElementById("description").innerHTML=k.weather[0].description;
document.getElementById("icon").innerHTML=k.weather[0].icon;
document.getElementById("base").innerHTML=k.base;
document.getElementById("long").innerHTML=k.coord.lon;
document.getElementById("long").innerHTML=k.coord.lon;
document.getElementById("long").innerHTML=k.coord.lon;
document.getElementById("long").innerHTML=k.coord.lon;

}
</script>
